{
  "$id": "https://www.austinpowder.com/specs/schemas/blast-hole-load/v1.0",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blast Hole Load",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "depth": {
      "type": "number",
      "description": "Measured in m in Metric system or in ft in USCS"
    },
    "subdrill": {
      "type": "number",
      "description": "Measured in m in Metric system or in ft in USCS"
    },
    "diameter": {
      "type": "number",
      "description": "Measured in mm in Metric system or in inches in USCS"
    },
    "drillingAngle": {
      "type": "number",
      "description": "Measured in degrees"
    },
    "drillingBearing": {
      "type": "number",
      "description": "Applicable to angled holes only. Measured in degrees. North is 0°, East is 90°, South is 180°, West is 270°."
    },
    "decks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "deckNumber": {
            "type": "integer"
          },
          "layers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "topDepth": {
                  "type": "number",
                  "description": "Distance from the top of the hole to the top of the layer. Measured in m in Metric system or in ft in USCS."
                },
                "height": {
                  "type": "number",
                  "description": "Measured in m in Metric system or in ft in USCS"
                },
                "layerType": {
                  "type": "string",
                  "enum": [ "product", "inert", "air", "other" ]
                },
                "stemmingDescription": {
                  "type": "string"
                },
                "blastProductId": {
                  "type": "string"
                },
                "isSubstitutedAsBooster": {
                  "type": "boolean"
                },
                "delayTime": {
                  "description": "Delay time in milliseconds",
                  "type": "number"
                },
                "detonatingCordConnectionType": {
                  "type": "string",
                  "enum": [ "fromChargeBelow", "fromChargeAbove", "fromChargeInSameDeck" ]
                },
                "dualDelayConnectionType": {
                  "type": "string",
                  "enum": [ "toDeckBelow", "toDeckAbove", "toOtherHole", "noConnection" ]
                }
              },
              "required": [ "topDepth", "layerType" ]
            }
          }
        },
        "required": [ "deckNumber", "layers" ]
      }
    }
  }
}